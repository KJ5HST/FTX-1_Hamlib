<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with WARN threshold filter to suppress DEBUG/INFO -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable DEBUG level for CatConnection - additivity=true so our programmatic appender receives events -->
    <logger name="com.yaesu.ftx1.core.CatConnection" level="DEBUG" additivity="true"/>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
